@{
    ViewData["Title"] = "Главная";
}
<style>
    .mainwindow{
        padding-top:30px;
        margin-bottom:20%;
    }
    .maintext {
        margin-left:10%;
        text-transform: uppercase;
    }
    .maincontainer {
        margin-left: 10%;
        height:auto;
        display: grid;
        grid-template-columns: 20% 20% 20% 20%;
        grid-template-rows: 30% 40% 30%;
        grid-row-gap: 10px;
        grid-column-gap: 10px;
        grid-template-areas: "header header main sidebar" "header header d d" "e f f f ";
    }
    .griditem {
        display: flex;
        flex-direction:column;
        justify-content:center;
        text-align:center;
        vertical-align:central;
        background: white;
        border-radius: 5px;
        border: 2px solid black;
    }
        .griditem img {
           
            text-align:center;
            justify-content:center;
            width: auto;
            height: 80%;
        }
</style>
<div class="mainwindow">
    <h1 class="maintext">Игровые<br /> аксессуары</h1>
    <div class="maincontainer">
        <div class="griditem" style="grid-area: header;"><a asp-action="Index" asp-controller="Tovar" asp-route-id="1"><img style="width:80%;" src="~/image/back1.png"><br/>Игровые мыши</a></div>
        <div class="griditem" style="grid-area: main;"><a asp-action="Index" asp-controller="Tovar" asp-route-id="2"><img style="width:100%;" src="~/image/back2.jpg"><br/>Геймерские кресла</a></div>
        <div class="griditem" style="grid-area: sidebar;"><a asp-action="Index" asp-controller="Tovar" asp-route-id="3"><img style="width:100%;"  src="~/image/back3.png"><br/>Игровые клавиатуры</a></div>
        <div class="griditem" style="grid-area: d;"><a asp-action="Index" asp-controller="Tovar" asp-route-id="4"><img style="width:70%;" src="~/image/back4.png"><br/>Игровые ноутбуки</a></div>
        <div class="griditem" style="grid-area: e;"><a asp-action="Index" asp-controller="Tovar" asp-route-id="5"><img style="width:100%;"  src="~/image/back5.jpg"><br/>Игры для приставок</a></div>
        <div class="griditem" style="grid-area: f;"><a asp-action="Index" asp-controller="Tovar" asp-route-id="6"><img style="width:30%;" src="~/image/back6.jpg"><br/>Игровые консоли</a> </div>
    </div>
</div>
